{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "inlineSources": true,
    "types": ["jest"],
    "paths": {
      "@cinder-forms/core": ["dist/cinder-forms/core/cinder-forms-core", "dist/cinder-forms/core"],
      "@cinder-forms/validators": [
        "dist/cinder-forms/validators/cinder-forms-validators",
        "dist/cinder-forms/validators"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": ["**/*.spec.ts"]
}
